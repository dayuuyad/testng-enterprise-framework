<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" verbose="1">

    <parameter name="environment" value="qa"/>
    <parameter name="browser" value="chrome"/>

    <test name="User Management Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="user"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.ecommerce.ui.UserManagementTests">
                <methods>
                    <include name="testValidUserLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Product Catalog Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="product"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.ecommerce.ui.ProductTests">
                <methods>
                    <include name="testProductSearch"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
