<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" verbose="1" parallel="methods" thread-count="5">

    <parameter name="environment" value="qa"/>
    <parameter name="api.timeout" value="30"/>

    <test name="User API Tests">
        <groups>
            <run>
                <include name="api"/>
                <include name="user"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.ecommerce.api.UserAPITests"/>
        </classes>
    </test>

    <test name="Product API Tests">
        <groups>
            <run>
                <include name="api"/>
                <include name="product"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.ecommerce.api.ProductAPITests"/>
        </classes>
    </test>

</suite>
