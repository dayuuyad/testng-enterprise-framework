<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Test Suite" verbose="1" parallel="tests" thread-count="3">

    <parameter name="environment" value="qa"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>

    <test name="Full Regression Test">
        <groups>
            <run>
                <include name="regression"/>
                <exclude name="broken"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.ecommerce.ui.UserManagementTests"/>
            <class name="com.company.ecommerce.ui.ProductTests"/>
            <class name="com.company.ecommerce.api.UserAPITests"/>
        </classes>
    </test>

</suite>
